
#include <stdio.h>
int show(int real,int complex){
    int r=real;
    int c=complex;
    printf(" %d + %di\n",r,c);
    
}
int add(int result1,int result2,int real,int complex,int real1,int complex1){
    
   result1=real+real1;
    result2=complex+complex1;
    printf("The sum of two complex number:\n");
    printf("\t\t\t\t\t\t\t%d+%di",result1,result2);
}

int main() {
    printf("*****ADDITION OF TWO COMPLEX NUMBER*****\n");
  int real,im,real1,im1;
  printf("z1=(real,imaginary)=");
  scanf("%d%d",&real,&im);
  printf("\nz2=(real,imaginary)=");
  scanf("%d%d",&real1,&im1);
  
  int result1=show(real,im);
  int result2=show(real1,im1);
  int output=add(result1,result2,real,im,real1,im1);
  

    return 0;
}
