
#include <stdio.h>
int factorial(int n){
    if(n==0){
        return 1;
    }
    return n*factorial(n-1);
}

int main() {
     int i,j,space,n=4,result;
   
     for(i=0;i<n;i++){
           printf("i=%d",i);
         
         for(space=0;space<4-i;space++){
             printf(" ");
         }
         for(j=0;j<=i;j++){
             result=factorial(i)/(factorial(i-j)*factorial(j));
             printf("%d ",result);
             
         }
         printf("\n");
     }
     
   
}
